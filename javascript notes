// Functions in java script
// Function wrks on' DRY = don't repeat yourself ' principle
function avg(a, b) {
    return (a + b) / 2;
}
c = avg(4, 6);
//console.log(c);
function mul(a, b) {
    return (a * b) / 2;
}
c1 = mul(3, 6);
function div(a, b) {
    return (a / b);
}
c2 = div(4, 2);
// console.log(c1,c2);

